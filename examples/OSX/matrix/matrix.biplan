
include "/usr/local/BIPLAN/graphics.biplan"

macro WIDTH  99
macro HEIGHT 33

for #i = 0 to WIDTH * HEIGHT
  mem[#i] = '$' + random 80
next

print restart

@t = TXT_GREEN  
@c = HIDE_CURSOR

for #z = 0 to HEIGHT 
  for #x = 0 to WIDTH
    for #y = 0 to random #z + 1
      print cursor #x, #y
      print char mem[#x + (#y * WIDTH)]
    next 
    delay 1
  next
next

@c = SHOW_CURSOR
print cursor 0, 35

stop
